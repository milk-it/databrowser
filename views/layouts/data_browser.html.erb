}

/* Forms */

input, textarea, select {
color:#333;
border:1px solid #BBB;
}

select { padding:0 0 0 1px;}

form ul {
list-style:none;
margin:6px 0 10px 0;
clear:none;
float:left;
width:100%;
list-style:none !important;
text-align:left;
}

form li {
clear:both;
float:left;
padding: 5px 0 5px 0;
width:100%;
background:none;
line-height:normal;
margin:0;
}
	
form li div li {float:none;border:none;}
form li div ul {float:none;margin:none;border:0;}
	
form label {
float:left;
display:block;
width:190px;
}

form label.inline {
display:inline !important;
float:none !important;
margin-top:-2px;
width:auto;
}
	
form li div {
margin-left:10px;
float:left;
}

form li div div { margin-left:0 !important; float:none !important; }
	
